<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/margin_medium">
        <ImageView
            android:id="@+id/detail_movie_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/margin_medium"/>
        <TextView
            android:id = "@+id/title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/detail_movie_image"
            android:layout_toLeftOf="@+id/favorite_button"
            android:textSize="@dimen/text_2xlarge"/>
        <TextView
            android:id = "@+id/release_date"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/detail_movie_image"/>
        <TextView
            android:id = "@+id/user_rating"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_below="@+id/release_date"
            android:layout_toRightOf="@id/detail_movie_image"/>
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="@dimen/size_large"
            android:layout_height="@dimen/size_large"
            android:src="@drawable/star"
            android:background="#00ffffff"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="onToggleStar"/>
        <TextView
            android:id = "@+id/overview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/detail_movie_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin_small"
            android:background="#CCCCCC"
            android:layout_below="@+id/overview"/>
        <TextView
            android:id="@+id/trailers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:text="Trailers"
            android:layout_below="@+id/line"/>
        <ListView
            android:id="@+id/listview_trailers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trailers"/>
        <TextView
            android:id="@+id/error_message_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="An error has occurred. Please try again."
            android:layout_below="@+id/trailers"
            android:textSize="@dimen/text_large"
            android:visibility="invisible"/>
        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin_small"
            android:background="#CCCCCC"
            android:layout_below="@+id/error_message_trailer"/>
        <TextView
            android:id="@+id/reviews"
            android:layout_below="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:text="Reviews"/>
        <ListView
            android:id="@+id/listview_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviews"/>
        <TextView
            android:id="@+id/error_message_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_large"
            android:text="An error has occurred. Please try again."
            android:layout_below="@+id/reviews"
            android:textSize="@dimen/text_large"
            android:visibility="invisible" />
    </RelativeLayout>
</ScrollView>